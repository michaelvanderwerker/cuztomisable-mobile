<Register>:
	id: register
	name: root.name

	MDGridLayout:
		rows: 1
		cols: 1
		pos_hint: {"top": 1}
		MDScrollView:
			always_overscroll: False
			MDCard:
				radius: [0, 0, 15, 15]
				pos_hint: {"center_x": 0.5, "center_y": 0.5}
				elevation: 1.25
				padding: 25
				height: 705
				size_hint_y: None
				MDGridLayout:
					rows: 3
					cols: 1
					padding: 0, 0, 0, 5
					MDGridLayout:
						id: layout
						rows: 2
						cols: 1
						adaptive_height: True
						padding: 0, 35, 0, 35
						MDLabel:
							text: "Cuztomisable"
							font_size: 40
							halign: "center"
							size_hint_y: None
							height: self.texture_size[1]
							padding: 0, 0, 0, 15

						MDGridLayout:
							id: form_layout
							rows: 10
							cols: 1
							adaptive_height: True
							MDLabel:
								size_hint_y: None
								height: self.texture_size[1]
								halign: "center"
								font_style: "Caption"
								text: "Our application is not live yet! However, you're more than welcome to sign up and we will send updates as we get closer to launch!"
							MDTextField:
								id: first_name
								hint_text: "First Name"
								helper_text: ""
								helper_text_mode: "on_error"
								pos_hint: {"center_x": .5, "center_y": .5}
								size_hint_x: 1
								on_text: root.clear('first_name')
							MDTextField:
								id: last_name
								hint_text: "Last Name"
								helper_text: ""
								helper_text_mode: "on_error"
								pos_hint: {"center_x": .5, "center_y": .5}
								size_hint_x: 1
								on_text: root.clear('last_name')
							MDTextField:
								id: email
								hint_text: "Email"
								helper_text: ""
								helper_text_mode: "on_error"
								pos_hint: {"center_x": .5, "center_y": .5}
								size_hint_x: 1
								on_text: root.clear('email')
							MDTextField:
								id: password
								hint_text: "Password"
								helper_text: ""
								helper_text_mode: "on_error"
								pos_hint: {"center_x": .5, "center_y": .5}
								size_hint_x: 1
								password: True
								disabled: root.in_progress
								on_text:
									root.clear('password')
									root.check()
							MDLabel:
								text: "Password Requirements"
								font_size: "20dp"
								size_hint_y: None
								height: self.texture_size[1]
								padding: 0, 15, 0, 5
							MDGridLayout:
								rows: 1
								cols: 2
								adaptive_height: True
								MDIcon:
									id: minimum_characters_checkbox
									icon: "checkbox-blank-outline"
									pos_hint: {"center_x": .5, "center_y": .5}
									padding: 0, 0, 5, 0
								MDLabel:
									text: "8 Minimum Characters"
									pos_hint: {"center_x": .5, "center_y": .5}
									size_hint_y: None
									height: self.texture_size[1]
							MDGridLayout:
								rows: 1
								cols: 2
								adaptive_height: True
								MDIcon:
									id: special_characters_checkbox
									icon: "checkbox-blank-outline"
									pos_hint: {"center_x": .5, "center_y": .5}
									padding: 0, 5, 5, 0
								MDLabel:
									text: "1 Special Character"
									pos_hint: {"center_x": .5, "center_y": .5}
									size_hint_y: None
									height: self.texture_size[1]
							MDGridLayout:
								rows: 1
								cols: 2
								adaptive_height: True
								MDIcon:
									id: uppercase_characters_checkbox
									icon: "checkbox-blank-outline"
									pos_hint: {"center_x": .5, "center_y": .5}
									padding: 0, 5, 5, 0
								MDLabel:
									text: "1 Uppercase Character"
									pos_hint: {"center_x": .5, "center_y": .5}
									size_hint_y: None
									height: self.texture_size[1]
							MDGridLayout:
								rows: 1
								cols: 2
								adaptive_height: True
								MDIcon:
									id: number_checkbox
									icon: "checkbox-blank-outline"
									pos_hint: {"center_x": .5, "center_y": .5}
									padding: 0, 5, 5, 0
								MDLabel:
									text: "1 Number"
									pos_hint: {"center_x": .5, "center_y": .5}
									size_hint_y: None
									height: self.texture_size[1]

					MDFillRoundFlatButton:
						text: "Register"
						font_size: 18
						pos_hint: {"center_x": 0.5}
						size_hint_x: 1
						padding: 0, 10, 0, 10
						on_press: root.register()
						disabled: root.in_progress

					MDTextButton:
						text: "Already have an account?"
						font_size: 12
						underline: True
						height: self.texture_size[1] + 35
						size_hint_x: 1
						valign: "top"
						halign: "center"
						on_press: app.root.ids.main_screen_manager.current = "login"
						disabled: root.in_progress