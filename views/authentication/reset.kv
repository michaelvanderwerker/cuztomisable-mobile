<Reset>:
	id: reset
	name: root.name

	MDGridLayout:
		rows: 1
		cols: 1
		pos_hint: {"top": 1}
		MDCard:
			radius: [0, 0, 15, 15]
			pos_hint: {"center_x": 0.5, "center_y": 0.5}
			elevation: 1.25
			padding: 25
			height: layout.height + 100
			size_hint_y: None
			MDGridLayout:
				rows: 2
				cols: 1
				padding: 0, 0, 0, 5
				MDGridLayout:
					id: layout
					rows: 3
					cols: 1
					adaptive_height: True
					padding: 0, 35, 0, 35
					MDLabel:
						text: "Cuztomisable"
						font_size: 40
						halign: "center"
						size_hint_y: None
						height: self.texture_size[1]
						padding: 0, 0, 0, 35
					MDGridLayout:
						id: form_layout
						rows: 6
						cols: 1
						adaptive_height: True
						MDTextField:
							id: password
							hint_text: "Password"
							icon_right: "eye-off"
							helper_text: ""
							helper_text_mode: "on_error"
							pos_hint: {"center_x": .5, "center_y": .5}
							size_hint_x: 1
							disabled: root.in_progress
							on_text:
								root.clear('password')
								root.check()
						MDLabel:
							text: "Password Requirements"
							font_size: 20
							size_hint_y: None
							height: self.texture_size[1]
							padding: 0, 15, 0, 5
						MDGridLayout:
							rows: 1
							cols: 2
							adaptive_height: True
							MDIcon:
								id: minimum_characters_checkbox
								icon: "checkbox-blank-outline"
								pos_hint: {"center_x": .5, "center_y": .5}
								padding: 0, 0, 5, 0
							MDLabel:
								text: "8 Minimum Characters"
								pos_hint: {"center_x": .5, "center_y": .5}
								size_hint_y: None
								height: self.texture_size[1]
						MDGridLayout:
							rows: 1
							cols: 2
							adaptive_height: True
							MDIcon:
								id: special_characters_checkbox
								icon: "checkbox-blank-outline"
								pos_hint: {"center_x": .5, "center_y": .5}
								padding: 0, 5, 5, 0
							MDLabel:
								text: "1 Special Character"
								pos_hint: {"center_x": .5, "center_y": .5}
								size_hint_y: None
								height: self.texture_size[1]
						MDGridLayout:
							rows: 1
							cols: 2
							adaptive_height: True
							MDIcon:
								id: uppercase_characters_checkbox
								icon: "checkbox-blank-outline"
								pos_hint: {"center_x": .5, "center_y": .5}
								padding: 0, 5, 5, 0
							MDLabel:
								text: "1 Uppercase Character"
								pos_hint: {"center_x": .5, "center_y": .5}
								size_hint_y: None
								height: self.texture_size[1]
						MDGridLayout:
							rows: 1
							cols: 2
							adaptive_height: True
							MDIcon:
								id: number_checkbox
								icon: "checkbox-blank-outline"
								pos_hint: {"center_x": .5, "center_y": .5}
								padding: 0, 5, 5, 0
							MDLabel:
								text: "1 Number"
								pos_hint: {"center_x": .5, "center_y": .5}
								size_hint_y: None
								height: self.texture_size[1]


				MDFillRoundFlatButton:
					text: "Reset"
					font_size: 18
					pos_hint: {"center_x": 0.5}
					size_hint_x: 1
					padding: 0, 10, 0, 10
					disabled: root.in_progress or root.password_requirements_met == False
					on_press: root.reset()